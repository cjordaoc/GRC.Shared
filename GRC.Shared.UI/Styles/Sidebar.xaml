<Styles xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:sharedControls="clr-namespace:GRC.Shared.UI.Controls;assembly=GRC.Shared.UI">

  <Styles.Resources>
    <!-- Sidebar Design Tokens -->
    <Thickness x:Key="SidebarItemPadding">12,10</Thickness>
    <Thickness x:Key="SidebarItemMargin">8,4</Thickness>
    <x:Double x:Key="SidebarItemCornerRadius">8</x:Double>
    <x:Double x:Key="SidebarBorderThickness">1</x:Double>
    <x:Double x:Key="SidebarTransitionDuration">200</x:Double>
  </Styles.Resources>

  <!-- SidebarHost Background and Border Styling -->
  <Style Selector="sharedControls|SidebarHost">
    <Setter Property="Background" Value="{StaticResource BrushSurfaceVariant}" />
    <Setter Property="BorderThickness" Value="0,0,1,0" />
    <Setter Property="BorderBrush" Value="{StaticResource BrushOutline}" />
  </Style>

  <!-- Navigation Button Styling (NavButton class) -->
  <Style Selector="ToggleButton.NavButton">
    <Setter Property="Background" Value="Transparent" />
    <Setter Property="BorderThickness" Value="0" />
    <Setter Property="Padding" Value="{StaticResource SidebarItemPadding}" />
    <Setter Property="Margin" Value="{StaticResource SidebarItemMargin}" />
    <Setter Property="CornerRadius" Value="{StaticResource SidebarItemCornerRadius}" />
    <Setter Property="Foreground" Value="{StaticResource BrushOnSurface}" />
    <Setter Property="FontSize" Value="14" />
    <Setter Property="HorizontalContentAlignment" Value="Left" />
    <Setter Property="VerticalContentAlignment" Value="Center" />
    <Setter Property="Cursor" Value="Hand" />
    <Setter Property="Transitions">
      <Transitions>
        <BrushTransition Property="Background" Duration="0:0:0.2" />
        <ColorTransition Property="Foreground" Duration="0:0:0.2" />
      </Transitions>
    </Setter>
  </Style>

  <!-- NavButton Hover State -->
  <Style Selector="ToggleButton.NavButton:pointerover /template/ ContentPresenter">
    <Setter Property="Background" Value="{StaticResource BrushOutline}" />
  </Style>

  <!-- NavButton Checked/Selected State -->
  <Style Selector="ToggleButton.NavButton:checked">
    <Setter Property="Background" Value="{StaticResource BrushPrimary}" />
    <Setter Property="Foreground" Value="{StaticResource BrushOnPrimary}" />
  </Style>

  <!-- NavButton Checked Hover State -->
  <Style Selector="ToggleButton.NavButton:checked:pointerover /template/ ContentPresenter">
    <Setter Property="Background" Value="{StaticResource BrushPrimaryContainer}" />
  </Style>

  <!-- Sidebar Title Text -->
  <Style Selector="TextBlock.SidebarTitle">
    <Setter Property="FontWeight" Value="500" />
    <Setter Property="FontSize" Value="14" />
    <Setter Property="Foreground" Value="{StaticResource BrushOnSurface}" />
  </Style>

  <!-- Sidebar Header Styling -->
  <Style Selector="Border.SidebarHeader">
    <Setter Property="BorderThickness" Value="0,0,0,1" />
    <Setter Property="BorderBrush" Value="{StaticResource BrushOutline}" />
    <Setter Property="Padding" Value="12,12" />
    <Setter Property="Margin" Value="0,0,0,8" />
  </Style>

  <!-- Sidebar Section Group Styling -->
  <Style Selector="ItemsControl.SidebarSection">
    <Setter Property="Margin" Value="0,4" />
  </Style>

  <!-- Section Divider -->
  <Style Selector="Border.SidebarDivider">
    <Setter Property="Height" Value="1" />
    <Setter Property="Background" Value="{StaticResource BrushOutline}" />
    <Setter Property="Margin" Value="8,8" />
    <Setter Property="Opacity" Value="0.5" />
  </Style>

</Styles>
