<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:viewModels="clr-namespace:GRC.Shared.UI.ViewModels.Dialogs;assembly=GRC.Shared.UI"
             x:Class="GRC.Shared.UI.Controls.Dialogs.InformationDialog">
    <StackPanel Spacing="12" MinWidth="320">
        <TextBlock Text="{Binding Title}" FontSize="18" FontWeight="SemiBold" />
        <TextBlock Text="{Binding Message}" TextWrapping="Wrap" />
        <Expander Header="{Binding DetailsHeaderText}" IsVisible="True">
            <TextBlock Text="{Binding Details}" TextWrapping="Wrap" />
        </Expander>
        <StackPanel Orientation="Horizontal" Spacing="8" HorizontalAlignment="Right">
            <Button Content="{Binding SecondaryButtonText}" Command="{Binding SecondaryCommand}" IsVisible="True" MinWidth="96" />
            <Button Content="{Binding DismissButtonText}" Command="{Binding DismissCommand}" MinWidth="96" />
        </StackPanel>
    </StackPanel>
</UserControl>
