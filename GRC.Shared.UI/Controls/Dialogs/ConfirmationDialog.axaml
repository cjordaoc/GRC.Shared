<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:viewModels="clr-namespace:GRC.Shared.UI.ViewModels.Dialogs;assembly=GRC.Shared.UI"
             x:Class="GRC.Shared.UI.Controls.Dialogs.ConfirmationDialog">
    <StackPanel Spacing="12" MinWidth="320" MaxWidth="500">
        <TextBlock Text="{Binding Title}" FontSize="18" FontWeight="SemiBold" TextWrapping="Wrap" />
        <TextBlock Text="{Binding Message}" TextWrapping="Wrap" MaxWidth="480" />
        <ContentControl Content="{Binding CustomContent}" />
        <StackPanel Orientation="Horizontal" Spacing="8" HorizontalAlignment="Right">
            <Button Content="{Binding CancelButtonText}" Command="{Binding CancelCommand}" MinWidth="96" />
            <Button Content="{Binding ConfirmButtonText}" Command="{Binding ConfirmCommand}" MinWidth="96" />
        </StackPanel>
    </StackPanel>
</UserControl>
